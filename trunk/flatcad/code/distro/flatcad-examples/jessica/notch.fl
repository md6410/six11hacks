; notch.fl - makes a notched segment

define notch(len, notchDepth, notchWidth, name)
  fAmt = (len / 2) - (notchWidth / 2)
  forward (fAmt)
  left(90)
  forward (notchDepth)
  right(90)
  forward (notchWidth / 2)
  mark(name)
  forward (notchWidth / 2)
  right(90)
  forward (notchDepth)
  left(90)
  forward (fAmt)  
done
